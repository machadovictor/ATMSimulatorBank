<Window x:Class="ATMBank.clientTransactions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATMBank"
        mc:Ignorable="d"
        Title="Transactions History Report" Height="450" Width="600" Loaded="Window_Loaded" >
    <Grid Background="Snow">
        <WrapPanel Orientation="Vertical" Margin="4.5,0,-4.5,0">
            <TextBox x:Name="textBox" Height="88" Width="576" Background="#ec0000" FontSize="24" Foreground="#FFF0F0F0" VerticalContentAlignment="Center"/>
        </WrapPanel>
        <Image Source="bank_img.png" Margin="15,10,497,353"/>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" Margin="4.5,0,-4.5,0" />
        <Label Content="Transactions" HorizontalAlignment="Right" FontSize="32" Width="431" Margin="0,34,31.6,312" Foreground="#333333" FontWeight="Bold"  />
        <Label Content="Recent" HorizontalAlignment="Right" FontSize="32" Width="136" Margin="0,-5,326.6,351" Foreground="#333333" FontWeight="Bold"  />
        <DataGrid x:Name="grdTransactions" HorizontalAlignment="Left" Height="274" Margin="18,108,0,0" VerticalAlignment="Top" Width="544"/>
    </Grid>
</Window>
